
<h1>Artists</h1>

<table>
  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.name, artist %></td>
        <td>[<%= link_to 'Rename', edit_artist_path(artist) %>]</td>
        <td>[<%= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' } %>]</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ New Artist', new_artist_path %>
