
<h1>Genres</h1>

<table>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, genre %></td>
        <td>[<%= link_to 'Rename', edit_genre_path(genre) %>]</td>
        <td>[<%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' } %>]</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ New Genre', new_genre_path %>
